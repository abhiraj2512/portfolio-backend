# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
# Set this to your frontend domain (Vercel or custom domain)
FRONTEND_URL=https://your-portfolio.vercel.app

# API Configuration
API_VERSION=v1

# MongoDB Configuration
# Get this from MongoDB Atlas -> Connect -> Drivers
# Use standard format if SRV doesn't work:
# mongodb://user:pass@host1:27017,host2:27017,host3:27017/dbname?ssl=true&replicaSet=xxx&authSource=admin
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# Admin Configuration
# Secret key for admin endpoints (use a strong random string)
ADMIN_SECRET=your-secure-admin-key-here

